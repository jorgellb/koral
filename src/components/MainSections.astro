---
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { ChevronRight, Star, Award, Users } from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Hero Section -->
<section class="relative min-h-[94vh] flex items-center overflow-hidden bg-primary noise-overlay">
  <div class="absolute inset-0 z-0">
    <img 
      src="/Slider imagen/clinica-koral-slider.jpg" 
      alt={lang === 'es' ? 'Clinica Dental Koral - Dentista de confianza en Vera, Almeria' : 'Koral Dental Clinic - Trusted dentist in Vera, Almeria'} 
      class="w-full h-full object-cover scale-110 animate-[ken-burns_30s_ease-in-out_infinite_alternate] opacity-50" 
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-primary via-primary/70 to-primary/30"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_20%_50%,rgba(37,99,235,0.15)_0%,transparent_60%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_80%_20%,rgba(37,99,235,0.08)_0%,transparent_50%)]"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl pt-20">
      <!-- Trust badge -->
      <div class="fade-up inline-flex items-center gap-3 px-5 py-2.5 bg-white/[0.08] backdrop-blur-xl rounded-full border border-white/[0.12] mb-10 animate-float">
        <span class="relative flex h-2.5 w-2.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-accent"></span>
        </span>
        <span class="text-[11px] font-black text-white/90 uppercase tracking-[0.25em]">{t('home.hero.badge')}</span>
      </div>
      
      <!-- Main headline -->
      <h1 class="text-5xl md:text-7xl lg:text-[6.5rem] text-white font-black mb-10 leading-[0.92] tracking-[-0.03em] fade-up" style="transition-delay: 0.1s">
        {t('hero.title').split(' ').map((word: string, i: number) => (
          <span class="inline-block hover:text-accent transition-colors duration-300" style={`transition-delay: ${i * 0.05}s`}>{word}&nbsp;</span>
        ))}
      </h1>
      
      <p class="text-lg md:text-xl text-slate-300/90 mb-14 leading-relaxed max-w-2xl fade-up font-medium" style="transition-delay: 0.3s">
        {t('hero.subtitle')}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-5 fade-up" style="transition-delay: 0.4s">
        <a href="#appointment" class="shine-effect bg-accent text-white px-10 py-5 rounded-2xl font-black text-lg hover:bg-white hover:text-primary transition-all flex items-center justify-center gap-3 group shadow-2xl shadow-accent/30 active:scale-[0.98] hover:-translate-y-0.5">
          {t('home.hero.cta.appointment')}
          <ChevronRight class="group-hover:translate-x-1 transition-transform" size={20} />
        </a>
        <a href="#treatments" class="bg-white/[0.06] hover:bg-white/[0.12] text-white px-10 py-5 rounded-2xl font-black text-lg border border-white/[0.15] backdrop-blur-xl transition-all text-center group active:scale-[0.98] hover:-translate-y-0.5">
          {t('home.hero.cta.treatments')}
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="flex flex-wrap gap-8 mt-16 fade-up" style="transition-delay: 0.6s">
        <div class="flex items-center gap-3 text-white/60">
          <Star size={16} class="text-amber-400" fill="currentColor" />
          <span class="text-xs font-bold uppercase tracking-wider">Google 5.0</span>
        </div>
        <div class="flex items-center gap-3 text-white/60">
          <Award size={16} class="text-accent" />
          <span class="text-xs font-bold uppercase tracking-wider">+10 {lang === 'es' ? 'anos exp.' : lang === 'en' ? 'years exp.' : lang === 'de' ? 'Jahre Erf.' : lang === 'nl' ? 'jaar erv.' : 'ans exp.'}</span>
        </div>
        <div class="flex items-center gap-3 text-white/60">
          <Users size={16} class="text-accent" />
          <span class="text-xs font-bold uppercase tracking-wider">5 {lang === 'es' ? 'idiomas' : lang === 'en' ? 'languages' : lang === 'de' ? 'Sprachen' : lang === 'nl' ? 'talen' : 'langues'}</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-4 opacity-40 fade-up" style="transition-delay: 0.8s">
     <div class="w-7 h-11 border-2 border-white/40 rounded-full flex justify-center p-1.5 backdrop-blur-sm">
        <div class="w-1.5 h-1.5 bg-white rounded-full animate-scroll-down"></div>
     </div>
  </div>
</section>

<!-- Presentation Section -->
<section class="section-padding bg-white relative overflow-hidden">
  <!-- Premium decorative elements -->
  <div class="absolute -right-20 top-20 text-slate-100/50 select-none pointer-events-none text-[12vw] font-black uppercase tracking-tighter mix-blend-multiply">
    ALMERIA
  </div>
  <div class="absolute -left-20 bottom-20 text-accent/[0.03] select-none pointer-events-none text-[15vw] font-black uppercase tracking-tighter rotate-90">
    KORAL
  </div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent/[0.02] rounded-full blur-3xl pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-20 items-center">
      <!-- Image column -->
      <div class="fade-up relative">
        <div class="absolute -inset-10 bg-gradient-to-br from-accent/10 to-blue-500/5 rounded-[4rem] -rotate-3 blur-3xl opacity-60"></div>
        <div class="relative rounded-[3rem] overflow-hidden shadow-[0_32px_64px_-16px_rgba(0,0,0,0.15)] transform hover:rotate-1 transition-all duration-1000 border border-white/20 group">
           <img 
             src="/Presentacion/Ana-clinica-koral-vera-almeria.jpg" 
             alt={lang === 'es' ? 'Dra. Ana Padilla - Directora de Clinica Dental Koral en Vera' : 'Dr. Ana Padilla - Director of Koral Dental Clinic in Vera'} 
             class="w-full aspect-[4/5] object-cover scale-105 group-hover:scale-100 transition-transform duration-[2s] ease-out" 
             loading="lazy"
             decoding="async"
           />
           <div class="absolute inset-0 bg-gradient-to-t from-primary/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
        </div>
        
        <!-- Floating Stats Card -->
        <div class="absolute -bottom-8 -right-4 md:-right-10 bg-white p-8 md:p-10 rounded-[2rem] shadow-elevated border border-slate-100/80 fade-up" style="transition-delay: 0.4s">
           <div class="relative">
              <span class="absolute -top-4 -left-4 w-11 h-11 bg-accent/10 rounded-full flex items-center justify-center text-accent">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="m4.93 4.93 14.14 14.14"/><path d="M2 12h20"/><path d="m19.07 4.93-14.14 14.14"/></svg>
              </span>
              <p class="text-accent font-black text-5xl md:text-6xl leading-none mb-2 tracking-tighter">{t('home.presentation.years.value')}</p>
              <div class="h-0.5 w-12 bg-gradient-to-r from-accent to-blue-400 mb-3 rounded-full"></div>
              <p class="text-primary font-black text-xs uppercase tracking-[0.2em]">{t('home.presentation.years.title')}</p>
              <p class="text-slate-400 text-[11px] font-medium mt-1">{t('home.presentation.years.subtitle')}</p>
           </div>
        </div>
      </div>
      
      <!-- Content column -->
      <div class="fade-up" style="transition-delay: 0.2s">
        <span class="inline-block px-4 py-1.5 bg-accent/[0.08] text-accent rounded-lg text-[11px] font-black uppercase tracking-[0.25em] mb-6 border border-accent/10">
          {t('home.presentation.badge')}
        </span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-primary mb-10 leading-[1.05] tracking-tight">
          {t('home.presentation.title')}
        </h2>
        <div class="space-y-8">
          <p class="font-bold text-slate-800 text-xl md:text-2xl leading-relaxed italic border-l-4 border-accent pl-8 py-2">
             {t('home.presentation.lead')}
          </p>
          <p class="text-slate-500 text-lg leading-relaxed">
            {t('home.presentation.desc')}
          </p>
          <div class="grid sm:grid-cols-2 gap-6 pt-6">
             <div class="group p-8 bg-gradient-to-br from-white to-slate-50/80 border border-slate-100 rounded-[2rem] shadow-card hover:shadow-elevated hover:-translate-y-2 transition-all duration-500">
                <div class="w-14 h-14 bg-accent/[0.08] text-accent rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent group-hover:text-white transition-all duration-500 group-hover:shadow-lg group-hover:shadow-accent/20">
                   <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                </div>
                <h3 class="font-black text-primary text-xl mb-2">{t('home.presentation.tech.title')}</h3>
                <p class="text-slate-500 text-sm font-medium leading-relaxed">{t('home.presentation.tech.desc')}</p>
             </div>
             <div class="group p-8 bg-gradient-to-br from-white to-slate-50/80 border border-slate-100 rounded-[2rem] shadow-card hover:shadow-elevated hover:-translate-y-2 transition-all duration-500">
                <div class="w-14 h-14 bg-accent/[0.08] text-accent rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent group-hover:text-white transition-all duration-500 group-hover:shadow-lg group-hover:shadow-accent/20">
                   <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                </div>
                <h3 class="font-black text-primary text-xl mb-2">{t('home.presentation.team.title')}</h3>
                <p class="text-slate-500 text-sm font-medium leading-relaxed">{t('home.presentation.team.desc')}</p>
             </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes ken-burns {
    0% { transform: scale(1); }
    100% { transform: scale(1.15); }
  }
</style>
