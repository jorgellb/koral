---
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { ShieldCheck, Calendar, CreditCard, MousePointer2 } from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const pricingHref = lang === 'es' ? '/precio-y-financiacion/' : `/${lang}/pricing-and-financing/`;

const sendingMsg = t('form.status.sending');
const successMsg = t('form.status.success');
const errorMsg = t('form.status.error');
---

<section id="appointment" class="py-32 relative overflow-hidden bg-white">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_100%_0%,rgba(37,99,235,0.05)_0%,transparent_50%)]"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="bg-primary rounded-[4rem] overflow-hidden shadow-2xl relative">
        <!-- Decoration -->
        <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-white/5 to-transparent pointer-events-none"></div>
        <div class="absolute -bottom-24 -left-24 w-64 h-64 bg-accent/20 rounded-full blur-3xl pointer-events-none"></div>

        <div class="grid lg:grid-cols-12">
          <!-- Left: Content -->
          <div class="lg:col-span-5 p-12 md:p-20 text-white flex flex-col justify-center">
            <span class="inline-block px-4 py-1.5 bg-white/10 rounded-lg text-[10px] font-black uppercase tracking-[0.2em] mb-8 w-fit border border-white/10">
              {t('appointment.facilities')}
            </span>
            <h2 class="text-4xl md:text-5xl font-black mb-8 leading-[1.1] tracking-tight italic uppercase text-white">
              {t('appointment.title.main')}
            </h2>
            <p class="text-lg text-blue-100/80 mb-12 leading-relaxed">
              {t('appointment.desc.main')}
            </p>

            <div class="space-y-8">
              <div class="flex items-start gap-5">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white shrink-0 border border-white/20 shadow-lg">
                  <span class="font-black text-xl">0%</span>
                </div>
                <div>
                  <h3 class="font-black text-lg mb-1 uppercase italic tracking-tighter text-white">{t('appointment.financing.title')}</h3>
                  <p class="text-sm text-white/70 leading-relaxed">{t('appointment.financing.desc')}</p>
                </div>
              </div>

              <div class="flex items-start gap-5">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white shrink-0 border border-white/20 shadow-lg">
                  <Calendar size={24} />
                </div>
                <div>
                  <h3 class="font-black text-lg mb-1 uppercase italic tracking-tighter text-white">{t('appointment.free.title')}</h3>
                  <p class="text-sm text-white/70 leading-relaxed">{t('appointment.free.desc')}</p>
                </div>
              </div>
            </div>

            <a href={pricingHref} class="mt-12 flex items-center gap-3 text-white/40 hover:text-accent transition-colors text-xs font-black uppercase tracking-widest group">
              {t('payment.title')} 
              <MousePointer2 size={14} class="group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
            </a>
          </div>

          <!-- Right: Form -->
          <div class="lg:col-span-7 bg-white/5 backdrop-blur-md p-12 md:p-20 border-l border-white/10 relative">
            <div class="relative z-10">
              <h3 class="text-3xl font-black text-white mb-2 italic uppercase tracking-tight">{t('appointment.request.title')}</h3>
              <p class="text-blue-100/60 mb-10 text-sm font-medium">{t('appointment.request.desc')}</p>

              <form id="contactForm" class="space-y-6 relative z-10">
                <div class="grid md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-blue-200/40 ml-1">{t('form.name')}</label>
                    <input type="text" name="name" class="w-full px-6 py-4 bg-white/10 border border-white/10 rounded-2xl focus:bg-white/20 focus:border-accent text-white transition-all outline-none placeholder:text-white/20" required />
                  </div>
                  <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-blue-200/40 ml-1">{t('form.email')}</label>
                    <input type="email" name="email" class="w-full px-6 py-4 bg-white/10 border border-white/10 rounded-2xl focus:bg-white/20 focus:border-accent text-white transition-all outline-none placeholder:text-white/20" required />
                  </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-blue-200/40 ml-1">{t('form.reason')}</label>
                    <select name="reason" class="w-full px-6 py-4 bg-white/10 border border-white/10 rounded-2xl focus:bg-white/20 focus:border-accent text-white transition-all outline-none appearance-none cursor-pointer group" required>
                      <option value="" disabled selected class="text-slate-900">{t('form.reason.default')}</option>
                      <option value={t('form.reason.opt1')} class="text-slate-900">{t('form.reason.opt1')}</option>
                      <option value={t('form.reason.opt2')} class="text-slate-900">{t('form.reason.opt2')}</option>
                      <option value={t('form.reason.opt3')} class="text-slate-900">{t('form.reason.opt3')}</option>
                      <option value={t('form.reason.opt4')} class="text-slate-900">{t('form.reason.opt4')}</option>
                      <option value={t('form.reason.opt5')} class="text-slate-900">{t('form.reason.opt5')}</option>
                      <option value={t('form.reason.opt6')} class="text-slate-900">{t('form.reason.opt6')}</option>
                      <option value={t('form.reason.opt7')} class="text-slate-900">{t('form.reason.opt7')}</option>
                      <option value={t('form.reason.opt8')} class="text-slate-900">{t('form.reason.opt8')}</option>
                      <option value={t('form.reason.opt9')} class="text-slate-900">{t('form.reason.opt9')}</option>
                      <option value={t('form.reason.opt10')} class="text-slate-900">{t('form.reason.opt10')}</option>
                      <option value={t('form.reason.opt11')} class="text-slate-900">{t('form.reason.opt11')}</option>
                      <option value={t('form.reason.opt12')} class="text-slate-900">{t('form.reason.opt12')}</option>
                      <option value={t('form.reason.opt13')} class="text-slate-900">{t('form.reason.opt13')}</option>
                      <option value={t('form.reason.opt14')} class="text-slate-900">{t('form.reason.opt14')}</option>
                      <option value="Otros" class="text-slate-900">Otros</option>
                    </select>
                  </div>
                  <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-blue-200/40 ml-1">{t('form.time')}</label>
                    <select name="time" class="w-full px-6 py-4 bg-white/10 border border-white/10 rounded-2xl focus:bg-white/20 focus:border-accent text-white transition-all outline-none appearance-none cursor-pointer" required>
                      <option value="" disabled selected class="text-slate-900">{t('form.time.default')}</option>
                      <option value="MaÃ±ana" class="text-slate-900">{t('form.time.morning')}</option>
                      <option value="Tarde" class="text-slate-900">{t('form.time.afternoon')}</option>
                    </select>
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="text-[10px] font-black uppercase tracking-widest text-blue-200/40 ml-1">{t('form.phone')}</label>
                  <input type="tel" name="phone" class="w-full px-6 py-4 bg-white/10 border border-white/10 rounded-2xl focus:bg-white/20 focus:border-accent text-white transition-all outline-none placeholder:text-white/20" required />
                </div>

                <div class="pt-4">
                  <label class="flex items-start gap-4 cursor-pointer group">
                    <input type="checkbox" name="consent" class="mt-1 w-5 h-5 rounded border-white/10 bg-white/5 text-accent focus:ring-accent" required />
                    <span class="text-[10px] text-blue-100/40 leading-relaxed font-medium transition-colors group-hover:text-blue-100/60" set:html={t('form.consent')}>
                    </span>
                  </label>
                </div>

                <button type="submit" class="w-full py-5 bg-accent text-white rounded-2xl font-black uppercase tracking-[0.2em] shadow-2xl shadow-accent/20 hover:bg-white hover:text-primary transition-all active:scale-[0.98]">
                  {t('form.submit')}
                </button>

                <div id="formStatus" class="p-4 rounded-xl text-center font-bold hidden opacity-0 transition-opacity"></div>

                <div class="flex items-center gap-3 text-white/20 text-[9px] font-black uppercase tracking-widest justify-center pt-4">
                  <ShieldCheck size={14} />
                  {t('legal.footer.recipients.desc')}
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline define:vars={{ sendingMsg, successMsg, errorMsg }}>
  (function() {
    const initAppointmentForm = () => {
      // Find ALL forms with id contactForm (in case there are duplicates or we need to be broad)
      const forms = document.querySelectorAll('#contactForm');
      
      forms.forEach(form => {
        // Clear any old listeners by cloning
        const newForm = form.cloneNode(true);
        form.parentNode.replaceChild(newForm, form);
        
        const status = newForm.querySelector('#formStatus');

        newForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          console.log('Appointment form submission intercepted');
          
          const submitBtn = newForm.querySelector('button[type="submit"]');
          const originalBtnText = submitBtn ? submitBtn.innerHTML : '';

          if (status) {
            status.textContent = sendingMsg;
            status.className = 'p-4 rounded-xl text-center font-bold block bg-white/10 text-white opacity-100';
            status.style.display = 'block';
          }
          
          if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = sendingMsg + '...';
          }

          const formData = new FormData(newForm);
          const data = Object.fromEntries(formData.entries());

          try {
            const response = await fetch('/api/send-email', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(data)
            });

            const result = await response.json().catch(() => ({}));

            if (response.ok) {
              if (status) {
                status.textContent = successMsg;
                status.className = 'p-4 rounded-xl text-center font-bold block bg-green-500/20 text-green-100 opacity-100';
              }
              if (window.showToast) {
                window.showToast(successMsg);
              }
              newForm.reset();
            } else {
              throw new Error(result.error || errorMsg);
            }
          } catch (err) {
            console.error('Appointment form error:', err);
            if (status) {
              status.textContent = err.message || errorMsg;
              status.className = 'p-4 rounded-xl text-center font-bold block bg-red-500/20 text-red-100 opacity-100';
            }
            if (window.showToast) {
              window.showToast(err.message || errorMsg, 'error');
            }
          } finally {
            if (submitBtn) {
              submitBtn.disabled = false;
              submitBtn.innerHTML = originalBtnText;
            }
            
            setTimeout(() => {
               if (status) {
                 status.classList.add('opacity-0');
                 setTimeout(() => status.style.display = 'none', 500);
               }
            }, 5000);
          }
        });
      });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAppointmentForm);
    } else {
      initAppointmentForm();
    }
  })();
</script>
