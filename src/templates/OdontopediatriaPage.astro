---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import FooterInfo from '../components/FooterInfo.astro';
import Contact from '../components/Contact.astro';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { 
  Baby, 
  Heart, 
  Milestone, 
  Sparkles, 
  Zap, 
  CheckCircle2, 
  AlertCircle, 
  HelpCircle, 
  ChevronRight,
  Stethoscope,
  Apple,
  Cookie
} from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stages = [
  {
    num: '1',
    title: t('odontopediatria.stages.1.title'),
    subtitle: t('odontopediatria.stages.1.subtitle'),
    points: [
      t('odontopediatria.stages.1.p1'),
      t('odontopediatria.stages.1.p2'),
      t('odontopediatria.stages.1.p3'),
      t('odontopediatria.stages.1.p4')
    ],
    color: 'bg-indigo-50 text-indigo-600'
  },
  {
    num: '2',
    title: t('odontopediatria.stages.2.title'),
    subtitle: t('odontopediatria.stages.2.subtitle'),
    points: [
      t('odontopediatria.stages.2.p1'),
      t('odontopediatria.stages.2.p2'),
      t('odontopediatria.stages.2.p3'),
      t('odontopediatria.stages.2.p4')
    ],
    color: 'bg-blue-50 text-blue-600'
  }
];

const stagesMiddle = [
  {
    num: '3',
    title: t('odontopediatria.stages.3.title'),
    subtitle: t('odontopediatria.stages.3.subtitle'),
    points: [
      t('odontopediatria.stages.3.p1'),
      t('odontopediatria.stages.3.p2'),
      t('odontopediatria.stages.3.p3'),
      t('odontopediatria.stages.3.p4')
    ],
    color: 'bg-cyan-50 text-cyan-600'
  },
  {
    num: '4',
    title: t('odontopediatria.stages.4.title'),
    subtitle: t('odontopediatria.stages.4.subtitle'),
    points: [
      t('odontopediatria.stages.4.p1'),
      t('odontopediatria.stages.4.p2'),
      t('odontopediatria.stages.4.p3'),
      t('odontopediatria.stages.4.p4')
    ],
    color: 'bg-emerald-50 text-emerald-600'
  }
];

const stagesFinal = [
  {
    num: '5',
    title: t('odontopediatria.stages.5.title'),
    subtitle: t('odontopediatria.stages.5.subtitle'),
    points: [
      t('odontopediatria.stages.5.p1'),
      t('odontopediatria.stages.5.p2'),
      t('odontopediatria.stages.5.p3'),
      t('odontopediatria.stages.5.p4')
    ],
    color: 'bg-orange-50 text-orange-600'
  },
  {
    num: '6',
    title: t('odontopediatria.stages.6.title'),
    subtitle: t('odontopediatria.stages.6.subtitle'),
    points: [
      t('odontopediatria.stages.6.p1'),
      t('odontopediatria.stages.6.p2'),
      t('odontopediatria.stages.6.p3'),
      t('odontopediatria.stages.6.p4')
    ],
    color: 'bg-rose-50 text-rose-600'
  }
];

const orthoIndicators = [
  t('odontopediatria.ortho.ind1'),
  t('odontopediatria.ortho.ind2'),
  t('odontopediatria.ortho.ind3'),
  t('odontopediatria.ortho.ind4'),
  t('odontopediatria.ortho.ind5'),
  t('odontopediatria.ortho.ind6')
];

const faqs = [
  {
    question: t('odontopediatria.faq.q1.q'),
    answer: t('odontopediatria.faq.q1.a')
  },
  {
    question: t('odontopediatria.faq.q2.q'),
    answer: t('odontopediatria.faq.q2.a')
  },
  {
    question: t('odontopediatria.faq.q3.q'),
    answer: t('odontopediatria.faq.q3.a')
  },
  {
    question: t('odontopediatria.faq.q4.q'),
    answer: t('odontopediatria.faq.q4.a')
  },
  {
    question: t('odontopediatria.faq.q5.q'),
    answer: t('odontopediatria.faq.q5.a')
  }
];

const slug = lang === 'es' ? '/odontopediatria' : `/${lang}/odontopediatria`;
const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "MedicalWebPage",
      "name": t('odontopediatria.meta.title'),
      "description": t('odontopediatria.meta.description'),
      "url": `https://clinicadentalkoral.es${slug}`,
      "isPartOf": { "@id": "https://clinicadentalkoral.es/#website" }
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://clinicadentalkoral.es${lang === 'es' ? '/' : '/' + lang + '/'}` },
        { "@type": "ListItem", "position": 2, "name": t('nav.treatments.odontopediatria'), "item": `https://clinicadentalkoral.es${slug}` }
      ]
    }
  ]
});
---

<Layout title={t('odontopediatria.meta.title')} description={t('odontopediatria.meta.description')} lang={lang} schema={pageSchema}>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-24 bg-slate-50 overflow-hidden">
       <!-- Decorative Elements -->
       <div class="absolute top-20 right-[-10%] w-[40%] h-[60%] bg-accent/5 rounded-full blur-[120px] pointer-events-none"></div>
       <div class="absolute bottom-[-10%] left-[-5%] w-[30%] h-[50%] bg-blue-500/5 rounded-full blur-[100px] pointer-events-none"></div>
       
       <div class="container mx-auto px-6 relative z-10">
          <div class="grid lg:grid-cols-2 gap-16 items-center">
             <div class="fade-up">
                <span class="inline-flex items-center gap-2 px-4 py-1.5 bg-accent text-white rounded-full text-xs font-black tracking-widest uppercase mb-8 shadow-lg shadow-accent/20">
                   <Sparkles size={14} fill="currentColor" /> {t('odontopediatria.hero.badge')}
                </span>
                <h1 class="text-5xl md:text-7xl font-black text-primary leading-[1.1] mb-8">
                   {t('odontopediatria.hero.title')} <span class="text-accent italic font-serif">{t('odontopediatria.hero.title.italic')}</span> {t('odontopediatria.hero.title.end')}
                </h1>
                <p class="text-xl text-slate-600 leading-relaxed mb-10 max-w-xl">
                   {t('odontopediatria.hero.subtitle')}
                </p>
                <div class="flex flex-col sm:flex-row gap-6">
                   <a href="#appointment" class="px-8 py-5 bg-primary text-white rounded-2xl font-black uppercase tracking-widest hover:bg-accent transition-all shadow-xl shadow-primary/20 text-center">
                      {t('odontopediatria.hero.cta')}
                   </a>
                   <div class="flex items-center gap-4 bg-white p-4 rounded-2xl border border-slate-100 shadow-sm">
                      <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent"><Heart size={20} fill="currentColor" /></div>
                      <p class="text-xs font-bold text-primary uppercase tracking-tighter leading-tight" set:html={t('odontopediatria.hero.staff')}> </p>
                   </div>
                </div>
             </div>
             
             <div class="relative fade-up" style="transition-delay: 0.2s">
                <div class="aspect-square bg-white rounded-[4rem] border border-slate-100 shadow-2xl overflow-hidden relative group">
                   <div class="absolute inset-0 bg-gradient-to-br from-accent/10 to-transparent pointer-events-none"></div>
                   <img src="/equipo/ana-soler.jpg" alt="OdontopediatrÃ­a Koral" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105" />
                   <!-- Floating Label -->
                   <div class="absolute bottom-8 left-8 right-8 bg-white/90 backdrop-blur-md p-6 rounded-3xl border border-white/20 shadow-xl">
                      <p class="text-primary font-black text-lg mb-1 italic">{t('odontopediatria.hero.quote')}</p>
                      <p class="text-slate-500 text-xs uppercase tracking-widest font-bold">{t('odontopediatria.hero.protocol')}</p>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Intro Wisdom -->
    <section class="py-24 bg-white relative">
       <div class="container mx-auto px-6">
          <div class="max-w-4xl mx-auto text-center fade-up">
             <h2 class="text-sm font-black uppercase tracking-[0.3em] text-accent mb-6">{t('odontopediatria.intro.badge')}</h2>
             <h3 class="text-4xl md:text-5xl font-black text-primary mb-12">{t('odontopediatria.intro.title')}</h3>
             <div class="grid md:grid-cols-3 gap-8 text-left uppercase tracking-tighter">
                <div class="p-8 bg-slate-50 rounded-3xl border-b-4 border-accent">
                   <div class="text-accent mb-4"><Baby size={32} /></div>
                   <h4 class="font-black text-primary mb-2">{t('odontopediatria.intro.visit.title')}</h4>
                   <p class="text-slate-500 text-xs font-medium leading-relaxed normal-case">{t('odontopediatria.intro.visit.desc')}</p>
                </div>
                <div class="p-8 bg-slate-50 rounded-3xl border-b-4 border-accent">
                   <div class="text-accent mb-4"><Zap size={32} /></div>
                   <h4 class="font-black text-primary mb-2">{t('odontopediatria.intro.sedation.title')}</h4>
                   <p class="text-slate-500 text-xs font-medium leading-relaxed normal-case">{t('odontopediatria.intro.sedation.desc')}</p>
                </div>
                <div class="p-8 bg-slate-50 rounded-3xl border-b-4 border-accent">
                   <div class="text-accent mb-4"><Heart size={32} /></div>
                   <h4 class="font-black text-primary mb-2">{t('odontopediatria.intro.trust.title')}</h4>
                   <p class="text-slate-500 text-xs font-medium leading-relaxed normal-case">{t('odontopediatria.intro.trust.desc')}</p>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Timeline / Stages -->
    <section class="py-24 bg-slate-50 overflow-hidden relative">
       <div class="container mx-auto px-6">
          <div class="text-center max-w-3xl mx-auto mb-20 fade-up">
             <h4 class="text-accent font-black uppercase tracking-[0.3em] mb-4 text-sm">{t('odontopediatria.calendar.badge')}</h4>
             <h3 class="text-4xl md:text-5xl font-black text-primary">{t('odontopediatria.calendar.title')}</h3>
          </div>

           <div class="grid lg:grid-cols-3 gap-12 relative">
             <!-- Stage Column 1 -->
             <div class="space-y-12">
                {stages.map((stage, idx) => (
                  <div class="fade-up" style={`transition-delay: ${idx * 0.1}s`}>
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl relative overflow-hidden group hover:-translate-y-2 transition-all duration-500">
                       <span class={`absolute top-4 right-6 text-[5rem] leading-none font-black opacity-[0.07] pointer-events-none select-none ${stage.color}`}>{stage.num}</span>
                       <div class="relative z-10">
                         <div class={`inline-flex items-center justify-center w-10 h-10 rounded-xl ${stage.color} text-lg font-black mb-5`}>{stage.num}</div>
                         <h5 class="text-2xl font-black text-primary mb-2 uppercase tracking-tighter">{stage.title}</h5>
                         <p class="text-accent font-bold mb-6 text-sm italic">{stage.subtitle}</p>
                         <ul class="space-y-3">
                            {stage.points.map(point => (
                              <li class="flex items-start gap-3 text-sm text-slate-500 leading-snug">
                                 <div class="mt-1 flex-none w-1.5 h-1.5 rounded-full bg-accent"></div>
                                 {point}
                              </li>
                            ))}
                         </ul>
                       </div>
                    </div>
                  </div>
                ))}
             </div>

             <!-- Stage Column 2 -->
             <div class="space-y-12 lg:pt-20">
                {stagesMiddle.map((stage, idx) => (
                  <div class="fade-up" style={`transition-delay: ${(idx + 2) * 0.1}s`}>
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl relative overflow-hidden group hover:-translate-y-2 transition-all duration-500">
                       <span class={`absolute top-4 right-6 text-[5rem] leading-none font-black opacity-[0.07] pointer-events-none select-none ${stage.color}`}>{stage.num}</span>
                       <div class="relative z-10">
                         <div class={`inline-flex items-center justify-center w-10 h-10 rounded-xl ${stage.color} text-lg font-black mb-5`}>{stage.num}</div>
                         <h5 class="text-2xl font-black text-primary mb-2 uppercase tracking-tighter">{stage.title}</h5>
                         <p class="text-accent font-bold mb-6 text-sm italic">{stage.subtitle}</p>
                         <ul class="space-y-3">
                            {stage.points.map(point => (
                              <li class="flex items-start gap-3 text-sm text-slate-500 leading-snug">
                                 <div class="mt-1 flex-none w-1.5 h-1.5 rounded-full bg-accent"></div>
                                 {point}
                              </li>
                            ))}
                         </ul>
                       </div>
                    </div>
                  </div>
                ))}
             </div>

             <!-- Stage Column 3 -->
             <div class="space-y-12">
                {stagesFinal.map((stage, idx) => (
                  <div class="fade-up" style={`transition-delay: ${(idx + 4) * 0.1}s`}>
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl relative overflow-hidden group hover:-translate-y-2 transition-all duration-500">
                       <span class={`absolute top-4 right-6 text-[5rem] leading-none font-black opacity-[0.07] pointer-events-none select-none ${stage.color}`}>{stage.num}</span>
                       <div class="relative z-10">
                         <div class={`inline-flex items-center justify-center w-10 h-10 rounded-xl ${stage.color} text-lg font-black mb-5`}>{stage.num}</div>
                         <h5 class="text-2xl font-black text-primary mb-2 uppercase tracking-tighter">{stage.title}</h5>
                         <p class="text-accent font-bold mb-6 text-sm italic">{stage.subtitle}</p>
                         <ul class="space-y-3">
                            {stage.points.map(point => (
                              <li class="flex items-start gap-3 text-sm text-slate-500 leading-snug">
                                 <div class="mt-1 flex-none w-1.5 h-1.5 rounded-full bg-accent"></div>
                                 {point}
                              </li>
                            ))}
                         </ul>
                       </div>
                    </div>
                  </div>
                ))}
             </div>
          </div>
       </div>
    </section>

    <!-- Caries Section -->
    <section class="py-24 bg-primary text-white overflow-hidden relative">
       <!-- Decoration -->
       <div class="absolute inset-0 z-0 opacity-10">
          <svg width="100%" height="100%"><pattern id="stripes" width="40" height="40" patternUnits="userSpaceOnUse" patternTransform="rotate(45)"><line x1="0" y1="0" x2="0" y2="40" stroke="white" stroke-width="2"/></pattern><rect width="100%" height="100%" fill="url(#stripes)"/></svg>
       </div>
       
       <div class="container mx-auto px-6 relative z-10">
          <div class="grid lg:grid-cols-2 gap-20 items-center">
             <div class="fade-up">
                <h2 class="text-accent font-black uppercase tracking-widest text-xs mb-6">{t('odontopediatria.caries.badge')}</h2>
                <h3 class="text-4xl md:text-6xl font-black mb-10 leading-tight text-white">{t('odontopediatria.caries.title')}</h3>
                <div class="space-y-6 text-slate-300 text-lg">
                   <p set:html={t('odontopediatria.caries.p1')}></p>
                   <p set:html={t('odontopediatria.caries.p2')}></p>
                   <div class="flex gap-8 mt-12">
                      <div class="flex flex-col gap-2">
                         <span class="text-3xl font-black text-white">{t('odontopediatria.caries.stat1.val')}</span>
                         <span class="text-xs uppercase tracking-widest text-accent font-bold">{t('odontopediatria.caries.stat1.label')}</span>
                      </div>
                      <div class="h-12 w-px bg-white/20"></div>
                      <div class="flex flex-col gap-2">
                         <span class="text-3xl font-black text-white">{t('odontopediatria.caries.stat2.val')}</span>
                         <span class="text-xs uppercase tracking-widest text-accent font-bold">{t('odontopediatria.caries.stat2.label')}</span>
                      </div>
                   </div>
                </div>
             </div>
             
             <div class="fade-up" style="transition-delay: 0.2s">
                <div class="bg-white p-10 md:p-14 rounded-[4rem] shadow-3xl text-primary">
                   <div class="flex gap-6 items-start mb-8">
                      <div class="w-16 h-16 bg-accent text-white rounded-[1.5rem] flex flex-none items-center justify-center shadow-lg shadow-accent/20">
                         <Apple size={32} />
                      </div>
                      <h4 class="text-2xl font-black leading-tight italic">{t('odontopediatria.caries.quote')}</h4>
                   </div>
                   <hr class="border-slate-100 mb-8" />
                   <div class="grid grid-cols-2 gap-8">
                      <div class="space-y-2">
                         <div class="flex items-center gap-2 text-accent font-black text-xs uppercase tracking-widest leading-loose uppercase">
                            <Cookie size={14} /> {t('odontopediatria.caries.cause.title')}
                         </div>
                         <p class="text-xs text-slate-500 font-medium leading-relaxed normal-case">{t('odontopediatria.caries.cause.desc')}</p>
                      </div>
                      <div class="space-y-2">
                         <div class="flex items-center gap-2 text-primary font-black text-xs uppercase tracking-widest leading-loose uppercase">
                            <Stethoscope size={14} /> {t('odontopediatria.caries.diag.title')}
                         </div>
                         <p class="text-xs text-slate-500 font-medium leading-relaxed normal-case">{t('odontopediatria.caries.diag.desc')}</p>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Orthodontics Indicators -->
    <section class="py-24 bg-white relative">
       <div class="container mx-auto px-6">
          <div class="max-w-6xl mx-auto bg-slate-50 border border-slate-100 rounded-[3.5rem] p-12 md:p-20 overflow-hidden relative">
             <div class="lg:flex gap-20 items-center relative z-10">
                 <div class="lg:w-1/2 mb-12 lg:mb-0">
                    <h3 class="text-3xl md:text-4xl font-black text-primary mb-8 leading-tight">{t('odontopediatria.ortho.title')}</h3>
                    <p class="text-lg text-slate-600 mb-10">
                       {t('odontopediatria.ortho.desc')}
                    </p>
                    <ul class="grid sm:grid-cols-2 gap-4">
                       {orthoIndicators.map(indicator => (
                          <li class="flex items-center gap-3 p-4 bg-white rounded-2xl border border-slate-200/50 shadow-sm group hover:border-accent hover:shadow-md transition-all">
                             <span class="text-accent group-hover:scale-110 transition-transform"><CheckCircle2 size={16} /></span>
                             <span class="text-sm font-bold text-slate-700 leading-tight">{indicator}</span>
                          </li>
                       ))}
                    </ul>
                 </div>
                 
                 <div class="lg:w-1/2">
                    <div class="bg-accent p-12 rounded-[2.5rem] shadow-2xl shadow-accent/20 relative overflow-hidden group">
                       <div class="absolute -top-10 -right-10 w-40 h-40 bg-white/10 rounded-full blur-3xl group-hover:bg-white/20 transition-all duration-700"></div>
                       <div class="relative z-10 text-white leading-relaxed">
                          <div class="mb-6"><AlertCircle size={40} /></div>
                          <h4 class="text-2xl font-black mb-4 italic uppercase tracking-tighter">{t('odontopediatria.ortho.note.title')}</h4>
                          <p class="text-white/90 font-medium" set:html={t('odontopediatria.ortho.note.desc')}>
                          </p>
                       </div>
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </section>
 
     <!-- FAQ Section -->
     <section class="py-24 bg-slate-50">
        <div class="container mx-auto px-6 max-w-4xl">
           <div class="text-center mb-16 fade-up">
              <h2 class="text-xs font-black uppercase tracking-[0.4em] text-accent mb-4">{t('odontopediatria.faq.badge')}</h2>
              <h3 class="text-4xl md:text-5xl font-black text-primary">{t('odontopediatria.faq.title')}</h3>
           </div>
 
           <div class="space-y-4">
              {faqs.map((faq, idx) => (
                 <div class="fade-up border border-slate-100 rounded-3xl bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <details class="group">
                       <summary class="flex justify-between items-center p-8 cursor-pointer list-none">
                          <h4 class="text-lg font-black text-primary pr-8 leading-tight">{faq.question}</h4>
                          <span class="group-open:rotate-180 transition-transform text-accent"><HelpCircle size={24} /></span>
                       </summary>
                       <div class="px-8 pb-8 text-slate-600 leading-relaxed border-t border-slate-50 pt-6">
                          <p>{faq.answer}</p>
                       </div>
                    </details>
                 </div>
              ))}
           </div>
        </div>
     </section>
 
     <!-- Final CTA -->
     <Contact />
  </main>
  
  <FooterInfo />
</Layout>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
