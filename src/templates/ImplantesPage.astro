---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import FooterInfo from '../components/FooterInfo.astro';
import Contact from '../components/Contact.astro';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { ShieldCheck, Award, Zap, Microscope, CheckCircle2, HelpCircle, ChevronRight, Binary, Target, ChevronDown } from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const implementationSteps = [
  { num: '01', title: t('implantes.steps.1.title'), desc: t('implantes.steps.1.desc') },
  { num: '02', title: t('implantes.steps.2.title'), desc: t('implantes.steps.2.desc') },
  { num: '03', title: t('implantes.steps.3.title'), desc: t('implantes.steps.3.desc') },
  { num: '04', title: t('implantes.steps.4.title'), desc: t('implantes.steps.4.desc') },
  { num: '05', title: t('implantes.steps.5.title'), desc: t('implantes.steps.5.desc') },
  { num: '06', title: t('implantes.steps.6.title'), desc: t('implantes.steps.6.desc') },
  { num: '07', title: t('implantes.steps.7.title'), desc: t('implantes.steps.7.desc') }
];

const faqs = [
  {
    question: t('implantes.faq.q1.q'),
    answer: t('implantes.faq.q1.a')
  },
  {
    question: t('implantes.faq.q2.q'),
    answer: t('implantes.faq.q2.a')
  },
  {
    question: t('implantes.faq.q3.q'),
    answer: t('implantes.faq.q3.a')
  },
  {
    question: t('implantes.faq.q4.q'),
    answer: t('implantes.faq.q4.a')
  },
  {
    question: t('implantes.faq.q5.q'),
    answer: t('implantes.faq.q5.a')
  }
];

const slug = lang === 'es' ? '/implantes-dentales' : `/${lang}/implantes-dentales`;
const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "MedicalWebPage",
      "name": t('implantes.meta.title'),
      "description": t('implantes.meta.description'),
      "url": `https://clinicadentalkoral.es${slug}`,
      "isPartOf": { "@id": "https://clinicadentalkoral.es/#website" }
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://clinicadentalkoral.es${lang === 'es' ? '/' : '/' + lang + '/'}` },
        { "@type": "ListItem", "position": 2, "name": t('nav.treatments.implantes'), "item": `https://clinicadentalkoral.es${slug}` }
      ]
    }
  ]
});
---

<Layout title={t('implantes.meta.title')} description={t('implantes.meta.description')} lang={lang} schema={pageSchema}>
  <Navigation />
  
  <main>
    <!-- Premium Hero Section -->
    <section class="relative min-h-[90vh] flex items-center pt-24 overflow-hidden bg-[#0A1A2F]">
      <!-- Animated Background elements -->
      <div class="absolute inset-0 z-0">
        <div class="absolute top-1/4 -left-20 w-[600px] h-[600px] bg-accent/20 rounded-full blur-[120px] animate-pulse"></div>
        <div class="absolute bottom-1/4 -right-20 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[100px]"></div>
      </div>
      
      <div class="container mx-auto px-6 relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div class="fade-up">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/5 border border-white/10 rounded-full mb-8 backdrop-blur-md">
              <Award size={16} class="text-accent" />
              <span class="text-xs font-black uppercase tracking-widest text-white">{t('implantes.hero.badge')}</span>
            </div>
            <h1 class="text-5xl md:text-7xl lg:text-[5.5rem] font-black text-white leading-[0.95] mb-8">
              {t('implantes.hero.title')} <br/> <span class="text-accent underline decoration-accent/20 underline-offset-[12px]">{t('implantes.hero.title.italic')}</span>
            </h1>
            <p class="text-xl md:text-2xl text-slate-300 leading-relaxed max-w-xl mb-10" set:html={t('implantes.hero.subtitle')}>
            </p>
            <div class="flex flex-wrap gap-6">
               <div class="flex items-center gap-3">
                  <div class="w-12 h-12 rounded-2xl bg-white/10 flex items-center justify-center text-accent ring-1 ring-white/20"><ShieldCheck /></div>
                  <span class="text-white font-bold text-sm uppercase tracking-wider uppercase">{t('implantes.hero.warranty')}</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-12 h-12 rounded-2xl bg-white/10 flex items-center justify-center text-accent ring-1 ring-white/20"><Binary /></div>
                  <span class="text-white font-bold text-sm uppercase tracking-wider">{t('implantes.hero.planning')}</span>
               </div>
            </div>
          </div>
          
          <div class="relative fade-up" style="transition-delay: 0.3s">
             <div class="absolute -inset-10 bg-accent/20 rounded-full blur-[100px] pointer-events-none opacity-30"></div>
             <div class="bg-gradient-to-br from-white/10 to-transparent p-1 rounded-[3rem] border border-white/20 backdrop-blur-sm shadow-2xl overflow-hidden group">
                <img src="/Presentacion/Ana-clinica-koral-vera-almeria.jpg" alt="Dra. Ana Padilla" class="rounded-[2.8rem] grayscale hover:grayscale-0 transition-all duration-1000 object-cover w-full scale-105 group-hover:scale-100" />
             </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Excellence Section -->
    <section class="py-24 bg-white">
       <div class="container mx-auto px-6">
          <div class="grid lg:grid-cols-12 gap-16 items-start">
             <div class="lg:col-span-5 fade-up sticky top-32">
                <h2 class="text-sm font-black uppercase tracking-[0.3em] text-accent mb-6">{t('implantes.excellence.badge')}</h2>
                <h3 class="text-4xl font-black text-primary mb-8 leading-tight">{t('implantes.excellence.title')}</h3>
                <p class="text-lg text-slate-600 leading-relaxed mb-8 italic">
                   {t('implantes.excellence.quote')}
                </p>
                <div class="p-8 bg-slate-50 rounded-[2rem] border border-slate-100">
                   <p class="text-primary font-bold mb-4">{t('implantes.excellence.honesty.title')}</p>
                   <p class="text-slate-500">
                     {t('implantes.excellence.honesty.desc')}
                   </p>
                </div>
             </div>
             
             <div class="lg:col-span-1 border-l border-slate-100 h-full hidden lg:block"></div>
             
             <div class="lg:col-span-6 space-y-12 fade-up" style="transition-delay: 0.2s">
                <div>
                   <h4 class="text-2xl font-black text-primary mb-6">{t('implantes.excellence.slow.title')}</h4>
                   <p class="text-slate-600 leading-relaxed">
                      {t('implantes.excellence.slow.desc')}
                   </p>
                </div>
                
                <div class="grid md:grid-cols-2 gap-8">
                   <div class="p-8 bg-white border border-slate-100 rounded-3xl shadow-sm hover:shadow-xl transition-all">
                      <div class="text-accent mb-4"><Microscope size={32} /></div>
                      <h5 class="font-black text-primary mb-3">{t('implantes.excellence.materials.title')}</h5>
                      <p class="text-sm text-slate-500">{t('implantes.excellence.materials.desc')}</p>
                   </div>
                   <div class="p-8 bg-white border border-slate-100 rounded-3xl shadow-sm hover:shadow-xl transition-all">
                      <div class="text-accent mb-4"><Zap size={32} /></div>
                      <h5 class="font-black text-primary mb-3">{t('implantes.excellence.invasion.title')}</h5>
                      <p class="text-sm text-slate-500">{t('implantes.excellence.invasion.desc')}</p>
                   </div>
                </div>

                <div class="prose prose-slate">
                   <p class="text-lg text-slate-600">
                      {t('implantes.excellence.definition')}
                   </p>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Steps Section -->
    <section class="py-24 bg-slate-50 overflow-hidden">
       <div class="container mx-auto px-6">
          <div class="text-center mb-20 fade-up">
             <h2 class="text-xs font-black uppercase tracking-[0.4em] text-accent mb-4">{t('implantes.steps.badge')}</h2>
             <h3 class="text-4xl md:text-5xl font-black text-primary">{t('implantes.steps.title')}</h3>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
             {implementationSteps.map((step, idx) => (
                <div class="fade-up group" style={`transition-delay: ${idx * 0.1}s`}>
                   <div class="relative p-8 bg-white rounded-[2rem] border border-slate-100 shadow-sm h-full transition-all group-hover:border-accent hover:shadow-xl">
                      <span class="absolute top-6 right-8 text-4xl font-black text-slate-50 group-hover:text-accent/10 transition-colors uppercase">{step.num}</span>
                      <h4 class="text-xl font-black text-primary mb-4 relative z-10">{step.title}</h4>
                      <p class="text-slate-500 text-sm leading-relaxed relative z-10">{step.desc}</p>
                   </div>
                </div>
             ))}
             
             <!-- Final card aesthetic -->
             <div class="fade-up" style="transition-delay: 0.7s">
                <div class="p-8 bg-accent rounded-[2rem] shadow-xl shadow-accent/20 h-full flex flex-col justify-center text-white">
                   <p class="font-black text-xl mb-2 italic">{t('implantes.steps.final.title')}</p>
                   <p class="text-white/80 text-sm">{t('implantes.steps.final.desc')}</p>
                   <div class="mt-6 flex justify-end">
                      <CheckCircle2 size={32} />
                   </div>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Regeneracion Osea -->
    <section class="py-32 bg-white relative">
       <div class="container mx-auto px-6">
          <div class="max-w-6xl mx-auto rounded-[4rem] bg-primary overflow-hidden relative shadow-3xl">
             <!-- Abstract background -->
             <div class="absolute inset-0 opacity-20">
                <svg width="100%" height="100%"><pattern id="gridLarge" width="80" height="80" patternUnits="userSpaceOnUse"><path d="M 80 0 L 0 0 0 80" fill="none" stroke="white" stroke-width="0.5"/></pattern><rect width="100%" height="100%" fill="url(#gridLarge)"/></svg>
             </div>
             
             <div class="grid lg:grid-cols-2 gap-0 relative z-10">
                <div class="p-12 md:p-20 text-white">
                   <h2 class="text-accent font-black uppercase tracking-widest text-xs mb-6">{t('implantes.regeneration.badge')}</h2>
                   <h3 class="text-4xl md:text-5xl font-black mb-8 leading-tight text-white">{t('implantes.regeneration.title')}</h3>
                   <p class="text-slate-300 text-lg leading-relaxed mb-10">
                      {t('implantes.regeneration.desc')}
                   </p>
                   
                   <div class="space-y-6">
                      <div class="flex gap-4">
                         <div class="w-1.5 h-1.5 bg-accent rounded-full mt-2"></div>
                         <p><strong class="text-white">{t('implantes.regeneration.biomaterials.title')}</strong> {t('implantes.regeneration.biomaterials.desc')}</p>
                      </div>
                      <div class="flex gap-4">
                         <div class="w-1.5 h-1.5 bg-accent rounded-full mt-2"></div>
                         <p><strong class="text-white">{t('implantes.regeneration.autologous.title')}</strong> {t('implantes.regeneration.autologous.desc')}</p>
                      </div>
                   </div>
                </div>
                
                <div class="bg-white/5 backdrop-blur-sm p-12 md:p-20 flex flex-col justify-center border-l border-white/10">
                   <h4 class="text-2xl font-black text-white mb-10">{t('implantes.regeneration.conditions.title')}</h4>
                   <div class="space-y-10">
                      <div class="flex gap-6 items-start group">
                         <div class="p-3 bg-white text-primary rounded-xl transition-transform group-hover:scale-110"><Microscope /></div>
                         <div>
                            <p class="font-black text-white uppercase tracking-widest text-sm mb-1">{t('implantes.regeneration.diag.title')}</p>
                            <p class="text-slate-400 text-sm uppercase">{t('implantes.regeneration.diag.desc')}</p>
                         </div>
                      </div>
                      <div class="flex gap-6 items-start group">
                         <div class="p-3 bg-white text-primary rounded-xl transition-transform group-hover:scale-110"><ShieldCheck /></div>
                         <div>
                            <p class="font-black text-white uppercase tracking-widest text-sm mb-1">{t('implantes.regeneration.team.title')}</p>
                            <p class="text-slate-400 text-sm uppercase">{t('implantes.regeneration.team.desc')}</p>
                         </div>
                      </div>
                      <div class="flex gap-6 items-start group">
                         <div class="p-3 bg-white text-primary rounded-xl transition-transform group-hover:scale-110"><Target /></div>
                         <div>
                            <p class="font-black text-white uppercase tracking-widest text-sm mb-1">{t('implantes.regeneration.space.title')}</p>
                            <p class="text-slate-400 text-sm uppercase">{t('implantes.regeneration.space.desc')}</p>
                         </div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-24 bg-slate-50">
       <div class="container mx-auto px-6 max-w-4xl">
          <div class="text-center mb-16 fade-up">
             <h2 class="text-xs font-black uppercase tracking-[0.4em] text-accent mb-4">{t('implantes.faq.badge')}</h2>
             <h3 class="text-4xl md:text-5xl font-black text-primary">{t('implantes.faq.title')}</h3>
          </div>

          <div class="space-y-4">
             {faqs.map((faq, idx) => (
                <div class="fade-up border border-slate-100 rounded-3xl bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                   <details class="group">
                      <summary class="flex justify-between items-center p-8 cursor-pointer list-none">
                         <h4 class="text-lg font-black text-primary pr-8">{faq.question}</h4>
                         <span class="group-open:rotate-180 transition-transform text-accent"><HelpCircle size={24} /></span>
                      </summary>
                      <div class="px-8 pb-8 text-slate-600 leading-relaxed border-t border-slate-50 pt-6">
                         <p>{faq.answer}</p>
                      </div>
                   </details>
                </div>
             ))}
          </div>
       </div>
    </section>

    <!-- Final CTA -->
    <Contact />
  </main>
  
  <FooterInfo />
</Layout>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
