---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import FooterInfo from '../components/FooterInfo.astro';
import Contact from '../components/Contact.astro';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { 
  CreditCard, 
  Wallet, 
  BadgeEuro, 
  ShieldCheck, 
  CheckCircle2, 
  Info,
  Banknote,
  PiggyBank
} from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const keywords = t('financiacion.hero.keywords').split('|');

const slug = lang === 'es' ? '/precio-y-financiacion' : `/${lang}/pricing-and-financing`;
const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "MedicalWebPage",
      "name": t('financiacion.meta.title'),
      "description": t('financiacion.meta.description'),
      "url": `https://clinicadentalkoral.es${slug}`,
      "isPartOf": { "@id": "https://clinicadentalkoral.es/#website" }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://clinicadentalkoral.es${lang === 'es' ? '/' : '/' + lang + '/'}` },
        { "@type": "ListItem", "position": 2, "name": t('financiacion.meta.title'), "item": `https://clinicadentalkoral.es${slug}` }
      ]
    }
  ]
});
---

<Layout title={t('financiacion.meta.title')} description={t('financiacion.meta.description')} lang={lang} schema={pageSchema}>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-24 bg-slate-900 overflow-hidden">
       <!-- Abstract background -->
       <div class="absolute inset-0 z-0 opacity-20 pointer-events-none">
          <svg width="100%" height="100%" viewBox="0 0 1000 1000" preserveAspectRatio="none">
             <defs>
                <pattern id="grid-pattern" width="40" height="40" patternUnits="userSpaceOnUse">
                   <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="0.5"/>
                </pattern>
             </defs>
             <rect width="100%" height="100%" fill="url(#grid-pattern)" />
          </svg>
       </div>
       
       <div class="container mx-auto px-6 relative z-10 text-white">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
             <div class="fade-up">
                <span class="inline-flex items-center gap-2 px-4 py-1.5 bg-accent text-white rounded-full text-[10px] font-black tracking-widest uppercase mb-8 shadow-lg shadow-accent/20">
                   {t('financiacion.hero.badge')}
                </span>
                <h1 class="text-4xl md:text-6xl font-black mb-8 leading-[1.1] tracking-tighter text-white">
                   {t('financiacion.hero.title')}
                </h1>
                <p class="text-xl text-slate-300 leading-relaxed mb-10 font-light">
                   {t('financiacion.hero.p1')}
                </p>
                <div class="flex flex-wrap gap-2 mb-8">
                    {keywords.map((keyword) => (
                        <span class="px-3 py-1 bg-white/10 rounded-lg text-xs font-semibold text-slate-300 border border-white/10">{keyword.trim()}</span>
                    ))}
                </div>
             </div>
             
             <div class="fade-up relative" style="transition-delay: 0.2s">
                 <div class="absolute -inset-4 bg-accent/20 rounded-[3rem] blur-2xl"></div>
                 <img src="/precio-financiacion/precio-financiacion-dental-vera-almeria.jpg" alt={t('financiacion.image.alt')} class="relative rounded-[3rem] shadow-2xl border border-white/10 w-full object-cover h-[500px]" />
             </div>
          </div>
       </div>
    </section>

    <!-- Financing Options Section -->
    <section class="py-24 bg-white relative overflow-hidden">
        <div class="absolute top-0 right-0 w-1/3 h-full bg-slate-50 skew-x-12 opacity-50 pointer-events-none"></div>
        <div class="container mx-auto px-6 relative z-10">
            <div class="grid md:grid-cols-2 gap-16 items-start">
                
                <!-- Multidisciplinary -->
                <div class="fade-up p-10 bg-white rounded-[3rem] shadow-xl border border-slate-100 hover:border-accent/30 transition-all group">
                    <div class="w-16 h-16 rounded-2xl bg-slate-100 flex items-center justify-center text-primary mb-8 group-hover:scale-110 group-hover:bg-accent group-hover:text-white transition-all">
                        <Wallet size={32} />
                    </div>
                    <h3 class="text-2xl font-black text-primary mb-6">{t('financiacion.multidisciplinary.title')}</h3>
                    <p class="text-slate-600 leading-relaxed text-lg">
                        {t('financiacion.multidisciplinary.p1')}
                    </p>
                </div>

                <!-- Financial Ally -->
                <div class="fade-up p-10 bg-slate-900 rounded-[3rem] shadow-xl border border-slate-800 text-white relative overflow-hidden group" style="transition-delay: 0.1s">
                    <div class="absolute top-0 right-0 p-10 opacity-10">
                        <BadgeEuro size={120} />
                    </div>
                    <div class="relative z-10">
                        <div class="w-16 h-16 rounded-2xl bg-white/10 flex items-center justify-center text-accent mb-8 group-hover:scale-110 transition-all">
                            <PiggyBank size={32} />
                        </div>
                        <h3 class="text-2xl font-black text-white mb-6">{t('financiacion.ally.title')}</h3>
                        <p class="text-slate-300 leading-relaxed text-lg">
                            {t('financiacion.ally.p1')}
                        </p>
                        <div class="mt-8 p-4 bg-white/5 rounded-2xl border border-white/10 backdrop-blur-sm">
                            <p class="text-sm font-medium text-accent italic">
                                "{t('financiacion.quote')}"
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Quality Philosophy -->
    <section class="py-24 bg-slate-50">
        <div class="container mx-auto px-6">
            <div class="max-w-4xl mx-auto text-center mb-16 fade-up">
                <span class="inline-block p-3 rounded-2xl bg-accent/10 text-accent mb-6">
                    <ShieldCheck size={32} />
                </span>
                <h2 class="text-3xl md:text-5xl font-black text-primary leading-tight mb-8">
                    {t('financiacion.quality.title')}
                </h2>
                <div class="space-y-6 text-lg text-slate-600 leading-relaxed text-left md:text-center">
                    <p>{t('financiacion.quality.p1')}</p>
                    <p>{t('financiacion.quality.p2')}</p>
                </div>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="fade-up p-8 bg-white rounded-3xl shadow-sm border border-slate-100">
                    <CheckCircle2 class="text-accent mb-4" size={28} />
                    <h4 class="font-bold text-primary mb-2 text-lg">{t('financiacion.quality.card1.title')}</h4>
                    <p class="text-sm text-slate-500">{t('financiacion.quality.card1.desc')}</p>
                </div>
                <div class="fade-up p-8 bg-white rounded-3xl shadow-sm border border-slate-100" style="transition-delay: 0.1s">
                    <CheckCircle2 class="text-accent mb-4" size={28} />
                    <h4 class="font-bold text-primary mb-2">{t('financiacion.quality.card2.title')}</h4>
                    <p class="text-sm text-slate-500">{t('financiacion.quality.p3')}</p>
                </div>
                <div class="fade-up p-8 bg-white rounded-3xl shadow-sm border border-slate-100" style="transition-delay: 0.2s">
                    <CheckCircle2 class="text-accent mb-4" size={28} />
                    <h4 class="font-bold text-primary mb-2">{t('financiacion.quality.card3.title')}</h4>
                    <p class="text-sm text-slate-500">{t('financiacion.quality.card3.desc')}</p>
                </div>
            </div>
        </div>
    </section>

    <Contact />
    <FooterInfo />
  </main>
</Layout>
