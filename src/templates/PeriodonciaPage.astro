---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import FooterInfo from '../components/FooterInfo.astro';
import Contact from '../components/Contact.astro';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { 
  Droplet, 
  ShieldCheck, 
  Zap, 
  Search, 
  CheckCircle2, 
  HelpCircle, 
  AlertCircle,
  Microscope,
  Stethoscope,
  Waves,
  Activity
} from 'lucide-astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const symptoms = [
  { text: t('periodoncia.symptoms.1'), icon: Droplet },
  { text: t('periodoncia.symptoms.2'), icon: Activity },
  { text: t('periodoncia.symptoms.3'), icon: Waves },
  { text: t('periodoncia.symptoms.4'), icon: AlertCircle }
];

const faqs = [
  {
    question: t('periodoncia.faq.q1.q'),
    answer: t('periodoncia.faq.q1.a')
  },
  {
    question: t('periodoncia.faq.q2.q'),
    answer: t('periodoncia.faq.q2.a')
  },
  {
    question: t('periodoncia.faq.q3.q'),
    answer: t('periodoncia.faq.q3.a')
  },
  {
    question: t('periodoncia.faq.q4.q'),
    answer: t('periodoncia.faq.q4.a')
  },
  {
    question: t('periodoncia.faq.q5.q'),
    answer: t('periodoncia.faq.q5.a')
  }
];

const slug = lang === 'es' ? '/periodoncia' : `/${lang}/periodoncia`;
const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "MedicalWebPage",
      "name": t('periodoncia.meta.title'),
      "description": t('periodoncia.meta.description'),
      "url": `https://clinicadentalkoral.es${slug}`,
      "isPartOf": { "@id": "https://clinicadentalkoral.es/#website" }
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://clinicadentalkoral.es${lang === 'es' ? '/' : '/' + lang + '/'}` },
        { "@type": "ListItem", "position": 2, "name": t('nav.treatments.periodoncia'), "item": `https://clinicadentalkoral.es${slug}` }
      ]
    }
  ]
});
---

<Layout title={t('periodoncia.meta.title')} description={t('periodoncia.meta.description')} lang={lang} schema={pageSchema}>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-24 bg-white overflow-hidden">
       <!-- Subtle wave background -->
       <div class="absolute inset-0 z-0 opacity-5 pointer-events-none">
          <svg width="100%" height="100%" viewBox="0 0 1000 1000" preserveAspectRatio="none">
             <path d="M0,500 C250,400 250,600 500,500 C750,400 750,600 1000,500" stroke="#00C4CC" stroke-width="2" fill="none" />
             <path d="M0,550 C250,450 250,650 500,550 C750,450 750,650 1000,550" stroke="#00C4CC" stroke-width="1" fill="none" />
          </svg>
       </div>
       
       <div class="container mx-auto px-6 relative z-10">
          <div class="grid lg:grid-cols-2 gap-16 items-center">
             <div class="fade-up">
                <span class="inline-flex items-center gap-2 px-4 py-1.5 bg-blue-50 text-accent rounded-full text-[10px] font-black tracking-widest uppercase mb-8 border border-blue-100">
                   {t('periodoncia.hero.badge')}
                </span>
                <h1 class="text-5xl md:text-7xl font-black text-primary leading-tight mb-8">
                   {t('periodoncia.hero.title')} <br/> <span class="text-accent italic font-serif">{t('periodoncia.hero.title.span')}</span>
                </h1>
                <p class="text-xl text-slate-600 leading-relaxed max-w-xl mb-10">
                   {t('periodoncia.hero.desc')}
                </p>
                <div class="flex flex-col sm:flex-row gap-6">
                   <div class="flex items-center gap-3">
                      <div class="w-12 h-12 rounded-2xl bg-slate-50 flex items-center justify-center text-accent border border-slate-100"><Microscope size={24} /></div>
                      <p class="text-[10px] font-black uppercase tracking-widest leading-tight text-primary" set:html={t('periodoncia.hero.analysis')}></p>
                   </div>
                   <div class="flex items-center gap-3">
                      <div class="w-12 h-12 rounded-2xl bg-slate-50 flex items-center justify-center text-accent border border-slate-100"><ShieldCheck size={24} /></div>
                      <p class="text-[10px] font-black uppercase tracking-widest leading-tight text-primary" set:html={t('periodoncia.hero.methods')}></p>
                   </div>
                </div>
             </div>
             
             <div class="relative fade-up" style="transition-delay: 0.2s">
                <div class="aspect-square bg-slate-50 rounded-[4rem] border border-slate-100 shadow-2xl overflow-hidden relative group">
                   <img src="/Presentacion/Ana-clinica-koral-vera-almeria.jpg" alt={t('periodoncia.hero.image.alt')} class="w-full h-full object-cover grayscale transition-all duration-1000 group-hover:grayscale-0 group-hover:scale-105" />
                   <!-- Floating Badge -->
                   <div class="absolute top-10 right-10 bg-white/90 backdrop-blur-md p-6 rounded-3xl border border-white/20 shadow-xl max-w-xs">
                      <p class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">{t('periodoncia.hero.image.badge')}</p>
                      <p class="text-primary font-black italic">{t('periodoncia.hero.image.quote')}</p>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Gingivitis Section -->
    <section class="py-24 bg-slate-50 overflow-hidden relative">
       <div class="container mx-auto px-6">
          <div class="max-w-4xl mx-auto rounded-[3.5rem] bg-white border border-slate-100 p-12 md:p-20 shadow-xl relative text-center">
             <h2 class="text-xs font-black uppercase tracking-[0.4em] text-accent mb-6">{t('periodoncia.gingivitis.badge')}</h2>
             <h3 class="text-4xl md:text-5xl font-black text-primary mb-8 leading-tight" set:html={t('periodoncia.gingivitis.title')}></h3>
             <p class="text-lg text-slate-500 max-w-2xl mx-auto mb-12" set:html={t('periodoncia.gingivitis.desc')}>
             </p>
             
             <div class="grid md:grid-cols-2 gap-8 text-left">
                <div class="p-8 bg-blue-50/50 rounded-3xl border border-blue-100">
                   <h4 class="font-black text-primary mb-4 flex items-center gap-2">
                      <AlertCircle size={20} class="text-red-500" /> {t('periodoncia.gingivitis.symptoms.title')}
                   </h4>
                   <ul class="space-y-2 text-sm text-slate-600">
                      <li>• {t('periodoncia.gingivitis.symptoms.list.1')}</li>
                      <li>• {t('periodoncia.gingivitis.symptoms.list.2')}</li>
                      <li>• {t('periodoncia.gingivitis.symptoms.list.3')}</li>
                   </ul>
                </div>
                <div class="p-8 bg-accent/5 rounded-3xl border border-accent/10">
                   <h4 class="font-black text-primary mb-4 flex items-center gap-2">
                      <Zap size={20} class="text-accent" /> {t('periodoncia.gingivitis.solution.title')}
                   </h4>
                   <p class="text-sm text-slate-600 leading-relaxed">
                      {t('periodoncia.gingivitis.solution.desc')}
                   </p>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- Periodontitis Section -->
    <section class="py-24 bg-primary text-white overflow-hidden relative">
       <div class="absolute inset-0 opacity-10 pointer-events-none">
          <svg width="100%" height="100%"><pattern id="gridLarge" width="80" height="80" patternUnits="userSpaceOnUse"><path d="M 80 0 L 0 0 0 80" fill="none" stroke="white" stroke-width="0.5"/></pattern><rect width="100%" height="100%" fill="url(#gridLarge)"/></svg>
       </div>

       <div class="container mx-auto px-6 relative z-10">
          <div class="grid lg:grid-cols-2 gap-20 items-center">
             <div class="fade-up">
                <h2 class="text-accent font-black uppercase tracking-widest text-xs mb-6">{t('periodoncia.periodontitis.badge')}</h2>
                <h3 class="text-4xl md:text-6xl font-black mb-10 leading-tight text-white">{t('periodoncia.periodontitis.title')}</h3>
                <div class="space-y-6 text-slate-300 text-lg leading-relaxed">
                   <p set:html={t('periodoncia.periodontitis.desc.1')}>
                   </p>
                   <p>
                      {t('periodoncia.periodontitis.desc.2')}
                   </p>
                   <div class="bg-white/5 p-8 rounded-3xl border border-white/10 mt-12">
                      <h4 class="text-white font-black text-xl mb-4 italic">{t('periodoncia.periodontitis.treatment.title')}</h4>
                      <p class="text-sm" set:html={t('periodoncia.periodontitis.treatment.desc')}></p>
                   </div>
                </div>
             </div>
             
             <div class="fade-up" style="transition-delay: 0.2s">
                <div class="bg-white p-12 md:p-16 rounded-[4rem] shadow-3xl text-primary relative">
                   <div class="absolute -top-10 left-12 w-20 h-20 bg-accent rounded-3xl flex items-center justify-center text-white shadow-xl shadow-accent/20">
                      <Stethoscope size={40} />
                   </div>
                   <h4 class="text-3xl font-black mb-8 italic">{t('periodoncia.periodontitis.special_attention.title')}</h4>
                   <div class="space-y-8">
                      {symptoms.map(symptom => (
                         <div class="flex items-center gap-6 group">
                            <div class="w-12 h-12 rounded-xl bg-slate-50 border border-slate-100 flex items-center justify-center text-accent group-hover:bg-accent group-hover:text-white transition-all">
                               <symptom.icon size={24} />
                            </div>
                            <span class="font-bold text-lg text-slate-700">{symptom.text}</span>
                         </div>
                      ))}
                   </div>
                   <p class="mt-12 text-xs text-slate-400 font-bold uppercase tracking-widest border-t border-slate-100 pt-8">
                      {t('periodoncia.periodontitis.special_attention.note')}
                   </p>
                </div>
             </div>
          </div>
       </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-24 bg-slate-50">
       <div class="container mx-auto px-6 max-w-4xl">
          <div class="text-center mb-16 fade-up">
             <h2 class="text-xs font-black uppercase tracking-[0.4em] text-accent mb-4">{t('periodoncia.faq.badge')}</h2>
             <h3 class="text-4xl md:text-5xl font-black text-primary">{t('periodoncia.faq.title')}</h3>
          </div>

          <div class="space-y-4">
             {faqs.map((faq, idx) => (
                <div class="fade-up border border-slate-100 rounded-3xl bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                   <details class="group">
                      <summary class="flex justify-between items-center p-8 cursor-pointer list-none">
                         <h4 class="text-lg font-black text-primary pr-8 leading-tight">{faq.question}</h4>
                         <span class="group-open:rotate-180 transition-transform text-accent"><HelpCircle size={24} /></span>
                      </summary>
                      <div class="px-8 pb-8 text-slate-600 leading-relaxed border-t border-slate-50 pt-6">
                         <p>{faq.answer}</p>
                      </div>
                   </details>
                </div>
             ))}
          </div>
       </div>
    </section>

    <!-- Final CTA -->
    <Contact />
  </main>
  
  <FooterInfo />
</Layout>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
